	<bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="myDataSource" />
		<property name="packagesToScan" value="com.test.entity" />
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">create</prop>
			</props>
		</property>
	</bean>

	
	<bean id="emp" class="com.test.entity.TestEmp">
	    <property name="empName" value="byType"/>
	</bean>
	
	<bean id="emp1" name="emp1" class="com.test.entity.TestEmp">
	    <property name="empName" value="byType1"/>
	</bean>
	
		<bean id="emp2" class="com.test.entity.TestEmp">
	    <property name="empName" value="byType2"/>
	</bean>

